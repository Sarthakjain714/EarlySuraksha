<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbackground"
    tools:context=".Dashboard"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:popupTheme="@style/MyToolbarStyle"
            app:title="Navigation Drawer"
            app:titleTextColor="@color/white" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#3F5A9E"
        app:headerLayout="@layout/navheader"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <fragment
                android:id="@+id/google_map2"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/shownavdrawer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/showdrawer"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/currentstatus"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="-70dp"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


            <androidx.cardview.widget.CardView
                android:id="@+id/statusmessage"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="111dp"
                app:cardBackgroundColor="#53B6FA"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/statusimage"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/safehai" />

                    <TextView
                        android:id="@+id/statustext"
                        style="bold"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:text="No Lightning Alerts"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/runtimechanges"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/statusmessage"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/updated"
                android:text="    " />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusmessage"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/line" />

            <ImageView
                android:id="@+id/meter"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/statusmessage"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/meter" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusmessage"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/meter"
                android:text="Warning:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/severe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusmessage"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/warning"
                android:text="None"
                android:textColor="#F63434"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/statusmessage"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="95dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/reported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/warning"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/meter"
                android:text="Reported :Just Now"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/statusmessage"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="145dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reported"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/meter"
                android:text="Updated : Just Now"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imformedmessage"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/updated"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="111dp"
                android:visibility="gone"
                app:cardBackgroundColor="#53B6FA"
                app:cardCornerRadius="10dp">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/informed" />

                    <TextView
                        android:id="@+id/informed"
                        style="bold"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Authorities Informed"

                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="-8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/appbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="parent" />

            <TextView
                android:id="@+id/hamburgericon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/appbar"
                android:layout_alignBottom="@+id/appbar"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="    "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/launchgamescreen"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/hamburgericon"
                android:layout_alignTop="@+id/appbar"
                android:layout_alignBottom="@+id/appbar"
                android:layout_marginStart="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="   "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/homescreen"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/launchgamescreen"
                android:layout_alignTop="@+id/appbar"
                android:layout_alignBottom="@+id/appbar"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="   "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/chats"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/homescreen"
                android:layout_alignTop="@+id/appbar"
                android:layout_alignBottom="@+id/appbar"
                android:layout_marginStart="79dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="   "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/addlocation"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@+id/chats"
                android:layout_alignTop="@+id/appbar"
                android:layout_alignBottom="@+id/appbar"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:text="   "
                android:textColor="#000000" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>